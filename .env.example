# ========================================
# Go User API Environment Configuration
# ========================================

# Database Configuration (REQUIRED)
# ================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
DB_NAME=postgres
DB_SSL_MODE=disable

# Connection Pool Settings
DB_MAX_CONNECTIONS=25
DB_CONNECTION_TIMEOUT=30s

# Application Configuration
# =========================
APP_PORT=8080
APP_HOST=0.0.0.0
LOG_LEVEL=info
LOG_FORMAT=json
ENVIRONMENT=development

# Build Configuration
# ===================
VERSION=dev
BUILD_TIME=

# Security Configuration
# ======================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SHUTDOWN_TIMEOUT=30s

# Health Check Configuration
# ==========================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Port Mapping for Development
# ============================
APP_HOST_PORT=8080
DB_HOST_PORT=5432

# Data Paths for Volumes
# ======================
POSTGRES_DATA_PATH=./data/postgres
APP_LOGS_PATH=./logs/app

# Optional Features
# =================
# No optional features currently enabled

# Production Override Variables
# ==============================
# Copy this file to .env.production and update values for production
# IMPORTANT SECURITY: Always change default passwords in production!
# Example production values:
# LOG_LEVEL=warn
# LOG_FORMAT=json
# ENVIRONMENT=production
# METRICS_ENABLED=true
# RATE_LIMIT_REQUESTS=1000
# DB_SSL_MODE=require
# DB_PASSWORD=USE_STRONG_RANDOM_PASSWORD_MIN_32_CHARS