# Production Environment Configuration
# ==================================

# Database Configuration (REQUIRED - UPDATE VALUES)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=postgres
DB_SSL_MODE=require
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=10s

# Application Configuration
APP_PORT=8080
APP_HOST=0.0.0.0
LOG_LEVEL=warn
LOG_FORMAT=json
ENVIRONMENT=production

# Build Configuration
VERSION=1.0.0
BUILD_TIME=

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SHUTDOWN_TIMEOUT=30s

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Port Mapping for Production (typically behind load balancer)
APP_HOST_PORT=8080
DB_HOST_PORT=5432

# Data Paths for Production
POSTGRES_DATA_PATH=/var/lib/postgresql/data
APP_LOGS_PATH=/app/logs

# Production Features
SERVER_DEBUG=false

# Production Security Settings
# Consider these additional security measures:
# - Use external secret management (AWS Secrets Manager, etc.)
# - Enable database SSL with proper certificates
# - Set up proper firewall rules
# - Monitor resource usage and set appropriate limits
# - Enable audit logging for security events